terraform {
  required_version = "~> 1.1"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}
 
# Configure the AWS Provider
provider "aws" {
  region = "us-east-1"
  
  
}
resource "aws_instance" "myec2" {
  ami           = "ami-0c398cb65a93047f2"
  instance_type = "t3.micro"
  key_name   = "my-ec2-key-pair"
 # vpc_security_group_ids = [aws_security_group.mysg.id]
  tags = {
    Name = "myinstance"
} 
}
resource "tls_private_key" "rsa_key" {
  algorithm = "RSA"
  rsa_bits  = 4096
}

resource "local_file" "private_key_pem" {
  content  = tls_private_key.rsa_key.private_key_pem
  filename = "my-ec2-key.pem" # Name of the file to store the private key
  file_permission = "0400" # Set appropriate permissions for the private key
}

resource "aws_key_pair" "my_ec2_key_pair" {
  key_name   = "my-ec2-key-pair" # Name of the key pair in AWS
  public_key = tls_private_key.rsa_key.public_key_openssh
}
